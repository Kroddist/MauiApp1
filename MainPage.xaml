<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage"
             BackgroundColor="{StaticResource Primary}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <VerticalStackLayout Grid.Row="0" Padding="20,40,20,20" Spacing="10">
            <Label Text="Мои Приложения" 
                   FontSize="36" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="White"/>
            <Label Text="Выберите приложение для запуска" 
                   FontSize="16" 
                   HorizontalOptions="Center"
                   TextColor="White"
                   Opacity="0.8"/>
        </VerticalStackLayout>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
                
                <Border StrokeThickness="0"
                        BackgroundColor="White"
                        Padding="0"
                        HeightRequest="180">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.2" Radius="15" Offset="0,5"/>
                    </Border.Shadow>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <VerticalStackLayout Grid.Column="0" Padding="25" Spacing="10" VerticalOptions="Center">
                            <Label Text="Крестики-Нолики" 
                                   FontSize="26" 
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}"/>
                            <Label Text="Классическая игра 3×3" 
                                   FontSize="14" 
                                   TextColor="Gray"/>
                            <Label Text="Играйте против друга!" 
                                   FontSize="12" 
                                   TextColor="LightGray"/>
                        </VerticalStackLayout>
                        
                        <Label Grid.Column="1" 
                               Text="❌⭕" 
                               FontSize="50" 
                               VerticalOptions="Center"
                               Margin="0,0,25,0"/>
                        
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTicTacToeClicked"/>
                        </Grid.GestureRecognizers>
                    </Grid>
                </Border>

                <Border StrokeThickness="0"
                        BackgroundColor="White"
                        Padding="0"
                        HeightRequest="180">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.2" Radius="15" Offset="0,5"/>
                    </Border.Shadow>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <VerticalStackLayout Grid.Column="0" Padding="25" Spacing="10" VerticalOptions="Center">
                            <Label Text="Квадратное Уравнение" 
                                   FontSize="26" 
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}"/>
                            <Label Text="Решение уравнений вида ax²+bx+c=0" 
                                   FontSize="14" 
                                   TextColor="Gray"/>
                            <Label Text="С подробным решением" 
                                   FontSize="12" 
                                   TextColor="LightGray"/>
                        </VerticalStackLayout>
                        
                        <Label Grid.Column="1" 
                               Text="📐" 
                               FontSize="50" 
                               VerticalOptions="Center"
                               Margin="0,0,25,0"/>
                        
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnQuadraticEquationClicked"/>
                        </Grid.GestureRecognizers>
                    </Grid>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
